<%# CSS・・・assets/stylesheets/messages/msg_index.css %>
<%= render 'shared/header' %>
<%= render 'shared/second-header' %>

<div class="chat-page">
  <div class="chat-area-parent">
    <div class="chat-content-area", id="chat-content-area">
        <%# メッセージ表示エリア %>
        <%= render 'shared/message', message: @messages %>
    </div>
    <%# メッセージ入力エリア %>
    <%= form_with model: @message, class:"chat-form-parent", placeholder:"type a message" do |f| %>
      <div class="form-group">
        <%= f.text_area :content, class:"chat-form-child", placeholder:"テキストを入力してください" %>
      </div>
      <div class="form-group">
        <%= f.button :type => "submit", id:"chat-send-btn" do %>
          <i class="fas fa-paper-plane snd-mark"></i>
        <% end %>
      </div>
    <% end %>
  </div>
</div>