<div class="registration-background">
  <div class="registration-panel">

    <%= form_with model: @user, url: user_registration_path, local: true do |f| %>
      <h1>SIGN UP</h1>
      <%= render "shared/error_messages", model: @user %>
      <div class="form-group">
        <div>
          <label class="info-text">姓名</label>
          <div class="notes">※スペース無しで入力してください</div>
        </div>
        <%= f.text_area :name, placeholder: "例）山田太郎", class:"form-space", autofocus: true %>
      </div>

      <div class="form-group">
        <div>
          <label class="info-text">フリガナ</label>
          <div class="notes">※スペース無し全角カナで入力してください</div>
        </div>
        <%= f.text_area :name_kana, placeholder: "例）ヤマダタロウ", class:"form-space" %>
      </div>

      <div class="form-group">
        <div>
          <label class="info-text">従業員ID</label>
        </div>
        <%= f.text_area :employee_id, class:"form-space" %>
      </div>

      <div class="form-group">
        <div>
          <label class="info-text">メールアドレス</label>
        </div>
        <%= f.email_field :email, class:"form-space" %>
      </div>

      <div class="form-group">
        <div>
          <label class="info-text">パスワード</label>
        </div>
        <%= f.password_field :password, placeholder:"6文字以上の半角英数字", class:"form-space" %>
      </div>

      <div class="form-group">
        <div>
          <label class="info-text">確認用パスワード</label>
        </div>
        <%= f.password_field :password_confirmation, class:"form-space" %>
      </div>
      <div class="actions">
        <%= f.submit "登録する", class:"register-btn" %>
      </div>
      <%= render "devise/shared/links" %>
    <% end %>
  </div>
</div>