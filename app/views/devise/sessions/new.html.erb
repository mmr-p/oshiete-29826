<div class="registration-background">
  <div class="registration-panel">

<%= form_with model: @user, url: user_session_path, class: 'registration-main', local: true do |f| %>
  <h1>LOG IN</h1>
  <br>

<%# エラーメッセージ表示 %>
  <div class='login-flash-message'>
  <%= flash[:notice] %>
  <%= flash[:alert] %>
  </div>
  <br>

  <div class="form-group">
    <div>
      <label class="info-text">メールアドレス</label>
    </div>
    <%= f.email_field :email, autofocus: true, class:"form-space" %>
  </div>

  <div class="form-group">
    <div>
      <label class="info-text">パスワード</label>
    </div>
    <%= f.password_field :password, class:"form-space" %>
  </div>

    <div class="actions">
    <%= f.submit "Log in", class:"register-btn" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <label class="guide-text"> ログインしたままにする</label>
    </div>
    <br>
  <% end %>
  <%= render "devise/shared/links" %>
<% end %>
  </div>
</div>