<% if user_signed_in? %>
  <% if current_user.already_liked?(@restaurant) %>
    <%= button_to 'いいねを取り消す', restaurant_like_path(restaurant_id: @restaurant, id: @restaurant.likes[0].id), method: :delete, remote: true, id:"like-btn-#{@restaurant.id}" %>
  <% else %>
    <%= button_to 'いいね', restaurant_likes_path(@restaurant), remote: true, id:"like-btn-#{@restaurant.id}" %>
  <% end %>
<% end %>